		</dependency>
		<dependency>
			<groupId>org.yixun</groupId>
			<artifactId>platform-application</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.yixun</groupId>
			<artifactId>platform-applicationImpl</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.yixun</groupId>
			<artifactId>platform-workflow</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>jstl</groupId>
