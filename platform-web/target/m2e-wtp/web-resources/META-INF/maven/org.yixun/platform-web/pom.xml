	<build>
		<plugins>
			<!-- 配置加入jetty服务器，开发时我们一般使用jetty服务器 -->
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<configuration>
					<scanIntervalSeconds>5</scanIntervalSeconds>
					<scanTargets>
						<scanTarget>E:\framework\workspace\platform\platform-support\target\classes</scanTarget>
						<scanTarget>E:\framework\workspace\platform\platform-conf\target\classes</scanTarget>
						<scanTarget>E:\framework\workspace\platform\platform-infra\target\classes</scanTarget>
						<scanTarget>E:\framework\workspace\platform\platform-core\target\classes</scanTarget>
						<scanTarget>E:\framework\workspace\platform\platform-application\target\classes</scanTarget>
						<scanTarget>E:\framework\workspace\platform\platform-applicationImpl\target\classes</scanTarget>
						<scanTarget>E:\framework\workspace\platform\platform-web\target\classes</scanTarget>
					</scanTargets>
					<webApp>
						<contextPath>/</contextPath>
						<extraClasspath>E:\framework\workspace\platform\platform-support\target\classes;E:\framework\workspace\platform\platform-conf\target\classes;E:\framework\workspace\platform\platform-infra\target\classes;E:\framework\workspace\platform\platform-core\target\classes;E:\framework\workspace\platform\platform-application\target\classes;E:\framework\workspace\platform\platform-applicationImpl\target\classes;E:\framework\workspace\platform\platform-web\target\classes</extraClasspath>
						<defaultsDescriptor>src/main/resources/webdefault.xml</defaultsDescriptor>
					</webApp>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
